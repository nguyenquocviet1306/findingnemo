<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">Rating</h4>
</div>
<div class="modal-body">
  
  <%= form_for(@hotel_review) do |f| %>
    <% if @hotel_review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@hotel_review.errors.count, "error") %> prohibited this hotel_review from being saved:</h2>
  
        <ul>
        <% @hotel_review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <% if user_signed_in? %>
        <%= f.text_field :user_id, required: true, class: 'hidden form-control', value:current_user.id %>
      <% end %>
      <%= f.text_field :hotel_id, required: true, class: 'hidden form-control', value:params[:hotel_id] %>
      
      <%= f.label :comment %><br>
      <%= f.text_area :comment, class: 'form-control' %>
      
      <%= f.label :space_rating %><br>
      <fieldset id="space_rating" class="starability-basic"> 
        <input type="radio" id="space_rate1" name="space_rating" value="1" /><label for="space_rate1">1 star</label>
        <input type="radio" id="space_rate2" name="space_rating" value="2" /><label for="space_rate2">2 stars</label>
        <input type="radio" id="space_rate3" name="space_rating" value="3" /><label for="space_rate3">3 stars</label>
        <input type="radio" id="space_rate4" name="space_rating" value="4" /><label for="space_rate4">4 stars</label>
        <input type="radio" id="space_rate5" name="space_rating" value="5" checked="checked" /><label for="space_rate5">5 stars</label>
        <input type="radio" id="space_rate6" name="space_rating" value="6" /><label for="space_rate6">6 stars</label>
        <input type="radio" id="space_rate7" name="space_rating" value="7" /><label for="space_rate7">7 stars</label>
        <input type="radio" id="space_rate8" name="space_rating" value="8" /><label for="space_rate8">8 stars</label>
        <input type="radio" id="space_rate9" name="space_rating" value="9" /><label for="space_rate9">9 stars</label>
        <input type="radio" id="space_rate10" name="space_rating" value="10" /><label for="space_rate10">10 stars</label>
      </fieldset>
      
      <%= f.label :service_rating %><br>
