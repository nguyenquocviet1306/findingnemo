        <input type="radio" id="security_rate10" name="security_rating" value="10" /><label for="security_rate10">10 stars</label>
      </fieldset>
      
      <%= f.label :clean_rating %><br>
      <fieldset id="clean_rating" class="starability-basic"> 
        <input type="radio" id="clean_rate1" name="clean_rating" value="1" /><label for="clean_rate1">1 star</label>
