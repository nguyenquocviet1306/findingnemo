        <input type="radio" id="service_rate3" name="service_rating" value="3" /><label for="service_rate3">3 stars</label>
        <input type="radio" id="service_rate4" name="service_rating" value="4" /><label for="service_rate4">4 stars</label>
        <input type="radio" id="service_rate5" name="service_rating" value="5" checked="checked" /><label for="service_rate5">5 stars</label>
        <input type="radio" id="service_rate6" name="service_rating" value="6" /><label for="service_rate6">6 stars</label>
        <input type="radio" id="service_rate7" name="service_rating" value="7" /><label for="service_rate7">7 stars</label>
        <input type="radio" id="service_rate8" name="service_rating" value="8" /><label for="service_rate8">8 stars</label>
        <input type="radio" id="service_rate9" name="service_rating" value="9" /><label for="service_rate9">9 stars</label>
        <input type="radio" id="service_rate10" name="service_rating" value="10" /><label for="service_rate10">10 stars</label>
      </fieldset>
      
      <%= f.label :security_rating %><br>
      <fieldset id="security_rating" class="starability-basic"> 
